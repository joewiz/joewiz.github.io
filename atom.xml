---
# based on https://github.com/krisb/jekyll-template/blob/master/atom.xml
# and http://blog.pixarea.com/2012/07/draft-posts-in-jekyll
layout: nil
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
    
    <title>{{ site.title }}</title>
    <link href="http://{{ site.domain }}/atom.xml" rel="self"/>
    <link href="http://{{ site.domain }}/"/>
    <updated>{{ site.time | date_to_xmlschema }}</updated>
    <id>http://{{ site.domain }}/</id>
    <author>
        <name>{{ site.author }}</name>
        <email>{{ site.email }}</email>
    </author>
    
    {% for post in site.posts %}
    {% unless post.draft %}
    <entry>
        <title>{{ post.title }}</title>
        <link href="http://{{ site.domain }}{{ post.url }}"/>
        <updated>{{ post.date | date_to_xmlschema }}</updated>
        <id>http://{{ site.domain }}{{ post.id }}</id>
        <content type="html">{{ post.content | xml_escape }}</content>
    </entry>
    {% endunless %}
    {% endfor %}
    
</feed>